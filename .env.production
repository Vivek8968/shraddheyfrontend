# HyperLocal Marketplace Frontend - Production Environment Configuration

# =============================================================================
# PRODUCTION BACKEND API CONFIGURATION
# =============================================================================

# Production API Base URL
REACT_APP_API_BASE_URL=https://api.hyperlocal-marketplace.com

# Production Microservice URLs
REACT_APP_USER_SERVICE_URL=https://api.hyperlocal-marketplace.com:8001
REACT_APP_SELLER_SERVICE_URL=https://api.hyperlocal-marketplace.com:8002
REACT_APP_CUSTOMER_SERVICE_URL=https://api.hyperlocal-marketplace.com:8003
REACT_APP_CATALOG_SERVICE_URL=https://api.hyperlocal-marketplace.com:8004
REACT_APP_ADMIN_SERVICE_URL=https://api.hyperlocal-marketplace.com:8005

# Production API Gateway URL
REACT_APP_API_GATEWAY_URL=https://api.hyperlocal-marketplace.com

# =============================================================================
# PRODUCTION AUTHENTICATION
# =============================================================================

# Production Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_production_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=hyperlocal-prod.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=hyperlocal-prod
REACT_APP_FIREBASE_STORAGE_BUCKET=hyperlocal-prod.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_production_sender_id
REACT_APP_FIREBASE_APP_ID=your_production_app_id

# =============================================================================
# PRODUCTION APPLICATION SETTINGS
# =============================================================================

REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production
REACT_APP_NAME=HyperLocal Marketplace
REACT_APP_SHORT_NAME=HyperLocal
REACT_APP_DESCRIPTION=Find local shops and products near you

# =============================================================================
# PRODUCTION GEOLOCATION & MAPS
# =============================================================================

REACT_APP_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
REACT_APP_DEFAULT_LATITUDE=40.7128
REACT_APP_DEFAULT_LONGITUDE=-74.0060
REACT_APP_DEFAULT_CITY=New York
REACT_APP_DEFAULT_COUNTRY=USA
REACT_APP_DEFAULT_SEARCH_RADIUS=10
REACT_APP_MAX_SEARCH_RADIUS=50

# =============================================================================
# PRODUCTION FEATURE FLAGS
# =============================================================================

REACT_APP_ENABLE_GEOLOCATION=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_DEMO_MODE=false

# =============================================================================
# PRODUCTION THIRD-PARTY INTEGRATIONS
# =============================================================================

REACT_APP_GA_MEASUREMENT_ID=your_production_ga_measurement_id
REACT_APP_SENTRY_DSN=your_production_sentry_dsn
REACT_APP_STRIPE_PUBLISHABLE_KEY=your_production_stripe_key

# =============================================================================
# PRODUCTION AWS S3
# =============================================================================

REACT_APP_AWS_REGION=us-east-1
REACT_APP_S3_BUCKET_NAME=hyperlocal-marketplace-prod
REACT_APP_S3_BASE_URL=https://hyperlocal-marketplace-prod.s3.amazonaws.com

# =============================================================================
# PRODUCTION PERFORMANCE & SECURITY
# =============================================================================

REACT_APP_API_TIMEOUT=15000
REACT_APP_API_RETRY_ATTEMPTS=2
REACT_APP_API_RETRY_DELAY=2000

# =============================================================================
# PRODUCTION PWA SETTINGS
# =============================================================================

REACT_APP_PWA_THEME_COLOR=#3B82F6
REACT_APP_PWA_BACKGROUND_COLOR=#FFFFFF
REACT_APP_PWA_DISPLAY=standalone
REACT_APP_PWA_ORIENTATION=portrait

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================

REACT_APP_CORS_ENABLED=true
REACT_APP_ALLOWED_ORIGINS=https://hyperlocal-marketplace.com,https://www.hyperlocal-marketplace.com
REACT_APP_CSP_ENABLED=true

# =============================================================================
# PRODUCTION LOGGING
# =============================================================================

REACT_APP_LOG_LEVEL=error
REACT_APP_DEBUG=false
REACT_APP_LOG_API_REQUESTS=false